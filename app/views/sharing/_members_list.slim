- if squad_members.count == 0
  .chat-member-wrapper.no-members
    h5 No squad members to add.
    
- else
  .chat-member-wrapper
    - squad_members.each do |user|
      .chat-member-card
        .photo
          = link_to user_path(user.username), target: :_blank, data: { type: 'modal-link' } do
            - if user.profile_picture_url
              = image_tag(user.profile_picture_url, class: 'profile-image')
            - else
              = image_pack_tag('media/images/placeholders/placeholder-user-profile.png', class: 'profile-image')
              
        .content
          .member-name
            = user.full_name
          .member-is-checked
            label class='big-checkbox-lable'
              input type='checkbox' id="checkbox-member-#{user.username}" data-username="#{user.username}"
              .checkmark
