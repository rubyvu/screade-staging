= form_for @event, url: event_path(@event), method: :put, remote: true do |f|

  .input-group.mb-3
   = f.text_field :title, autocomplete: 'off', class: 'form-control', placeholder: 'Title', required: true

  .input-group.mb-3
    = f.text_field :description, autocomplete: 'off', class: 'form-control', placeholder: 'Event Description', required: true

  .input-group.mb-3
    .input-group-prepend
      .input-group-text
        = image_pack_tag 'media/images/icons/ic_calendar.png', class: 'img-responsive theme-color-icon'

    = text_field_tag 'event[date]', date_picker_timestamp(@event.start_date), class: 'form-control', id: 'datepicker-edit-event', placeholder: 'Date', autocomplete: 'off', required: true

  .input-group.mb-3
    .input-group-prepend
      .input-group-text
        = image_pack_tag 'media/images/icons/ic_clock.png', class: 'img-responsive theme-color-icon'

    = f.text_field :start_date, value: time_picker_timestamp(@event.start_date), autocomplete: 'off', class: 'form-control timepicker', placeholder: 'Start Time', required: true

  .input-group.mb-3
    .input-group-prepend
      .input-group-text
        = image_pack_tag 'media/images/icons/ic_clock.png', class: 'img-responsive theme-color-icon'

    = f.text_field :end_date, value: time_picker_timestamp(@event.end_date), autocomplete: 'off', class: 'form-control timepicker', placeholder: 'End Time', required: true

  .actions
    = f.submit 'Update', class: 'btn btn-primary w-100'
